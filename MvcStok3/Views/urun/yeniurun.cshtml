@model MvcStok3.Models.Entity.tbl_urunler

@{
    ViewBag.Title = "yeniurun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">

    <div class="row container">
        <label class="" style="margin-right:20px;">Ürün Adı</label>
        <input type="text" name="urunad" value="" class="form-control" />

    </div>

    <div class="row container">
        <label style="margin-top:20px;">Marka</label>
        <input type="text" name="marka" value="" class="form-control" />
    </div>

    <div class="row container">
        <label style="margin-top:20px;">Kategori</label>
        @Html.DropDownListFor(m => m.tbl_kat.kat_id ,(List<SelectListItem>)ViewBag.dgr,new { @class = "form-control" })
    </div>

    <div class="row container">
        <label style="margin-top:20px;">Fiyat</label>
        <input type="text" name="fiyat" value="" class="form-control" />
    </div>

    <div class="row container">
        <label style="margin-top:20px;">Stok</label>
        <input type="text" name="stok" value="" class="form-control" />
    </div>

    <div class="row" style="margin-top:20px;">

        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>


